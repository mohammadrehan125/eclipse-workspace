package lacture4;

import java.util.Scanner;

public class PatternAssignment {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
        int N = sc.nextInt();
        int row = 1;
        int nsp = 0;
        int nst = N;
        while(row<=N)
        {
        	int cst = 1;
        	while(cst<=nst)
        	{
        		System.out.print("* ");
        		cst++;
        	}
        	int csp = 1;
        	while(csp<=nsp)
        	{
        		System.out.print("  ");
        		csp++;
        	}
        	System.out.println();
        	row++;
        	nsp++;
        	nst--;
        }

	}

}
