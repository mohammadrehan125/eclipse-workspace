package lacture4;

import java.util.Scanner;

public class Apattern2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
        int N = sc.nextInt();
        int row = 1;
        int nd = 1;
        int nsp = N-1;
        
        while(row <= N)
        {
        	
            int csp = 1;
            while(csp <= nsp)
            {
                System.out.print("  ");
                csp++;

            }
            int csd = 1;
            while(csd <= nd)
            {
              System.out.print(csd+" ");
            }
            
            System.out.println();
    //        if()
            row++;
              if(csd/2 == 0)
                {
               
                 nd+=2;
                }
                else
                {
                    nd++;
                }
            nsp--;
        }

	}
}


