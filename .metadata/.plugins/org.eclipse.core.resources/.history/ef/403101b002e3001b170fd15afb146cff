package lacture4;

import java.util.Scanner;

public class PatternAssignment {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
        int N = sc.nextInt();
        int row = 1;
        int nsp = 0;
        int nst = 2*N-1;
        int val=4;
        while(row<=(2*N-1))
        {
        	int csp = 1;
        	while(csp<=nsp)
        	{
        		System.out.print("  ");
        		csp++;
        	}
        	
        	int cst = 1;
        	
        	while(cst<=nst)
        	{
        		System.out.print(val+ " ");
        		cst++;
        		if(cst<=(nst/2)) {
        			val--;
        		}else {
        			val++;
        		}
        		
        	}
        	if(row<=N-1) {
        		
        		nsp++;
        		nst=nst-2;
        		val=val-2;
        		
        	}else {
        		nsp--;
        		nst=nst+2;
        		val=val+2;
        		
        	}
        	row++;
        	
       
        	
        	
        	System.out.println();
        	
        }

	}

}
