package lacture4;

import java.util.Scanner;

public class Apattern2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
        int N = sc.nextInt();
        int row = 1;
        int nd = 1;
        int nst = N;
        System.out.println(nd);
        while(row <= N)
        {
        	
            int nsd = 1;
            while(nsd <= nd)
            {
                System.out.print(nd);
                nsd++;

            }
            System.out.println();
    //        if()
            row++;
            nd+=2;
            nst--;
        }

	}

}
